template(name='loginForm')
  .col-lg-4.col-lg-offset-4.col-md-4.col-md-offset-4
    h1 
      |Login
    if err
      .alert.alert-danger

        = err.reason
    form#loginForm(role='form')
      .form-group(class='{{#if isUserError}}has-error{{/if}}')
        label(for='user_email') 
          | Email:
        input#userEmail.form-control(type='email', name='user_email')
      .form-group(class='{{#if isPasswordError}}has-error{{/if}}')
        label(for='user_password') 
          | Password:
        input#userPassword.form-control(type='password', name='user_password')
      if creatingAccount
        input#creatingAccount.btn.btn-default(type='submit', value='Create')
        a#goLogin(href='#') 
          | (Login)
      else
        input#login.btn.btn-default(type='submit', value='Login')
        a#goCreate(href='#') 
          | (Create Account)
