template(name='calendar')
  if currentUser
    .col-md-11.col-sm-10.col-md-offset-1.col-sm-offset-2
      #calendar
    +sidebarComponent(
      sidebarSize='md'
      sidebarType='default'
      location='right'
      view='fullCalendarEvent'
      position='absolute')


template(name="calendarSidebarLinks")
  li.sidebar-list
    +defaultSidebarLinks


template(name="defaultSidebarLinks")
  a.sidebar-list-link(href="{{pathFor 'calendar'}}")
    i.fa.fa-calendar
    |Cal
  a.sidebar-list-link(href="{{pathFor 'locationEvent'}}")
    i.fa.fa-plus
    |New
